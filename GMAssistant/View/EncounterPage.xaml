<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GMAssistant.View.EncounterPage"
             xmlns:viewmodel="clr-namespace:GMAssistant.ViewModel"
             xmlns:converter="clr-namespace:GMAssistant.Converters"
             xmlns:model="clr-namespace:GMAssistant.Model"
             x:DataType="viewmodel:EncounterViewModel"
             Title="{Binding CurrentEncounter.Name}">
    <ContentPage.Resources>
        <converter:HitPointsConverter x:Key="HPCon"/>
    </ContentPage.Resources>
    <Grid>
        <ScrollView Grid.Row="0">
        <VerticalStackLayout >
            <HorizontalStackLayout>
                <Label Text="Name: " FontSize="24"/>
                <Editor Margin="5" FontSize="24" Text="{Binding CurrentEncounter.Name}"/>
            </HorizontalStackLayout>
            <Label Text="Description: " FontSize="24"/>
            <Editor Margin="5" AutoSize="TextChanges" Text="{Binding CurrentEncounter.Description}"/>
            <HorizontalStackLayout Padding="10" HorizontalOptions="Center">
                <Label Text="Actor Name" FontSize="24" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Init" FontSize="24" WidthRequest="100" HorizontalOptions="Center"/>
                <Label Text="HP" FontSize="24" WidthRequest="100" HorizontalOptions="Center"/>
                <Label Text="\" FontSize="24"/>
                <Label Text="Max HP" FontSize="24" WidthRequest="100" HorizontalOptions="Center"/>
                <Label Text="Conditions" FontSize="24" WidthRequest="180" HorizontalOptions="Center"/>
                <Label Text="Info" FontSize="24" WidthRequest="60" HorizontalOptions="Center"/>
            </HorizontalStackLayout>
            <Line X2="{Binding Width, Source={RelativeSource Self}}" HorizontalOptions="Fill" StrokeThickness="2" Stroke="Gray" />
            <CollectionView ItemsSource="{Binding Entities}" VerticalOptions="Fill">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Entity">
                        <Grid Padding="10" HorizontalOptions="Center">
                            <Editor Text="{Binding Name}" Grid.Column="1" WidthRequest="200"/>
                            <Editor Text="{Binding Initiative}" Grid.Column="2" WidthRequest="100" />
                            <Editor Text="{Binding CurrentHP}" Grid.Column="3" WidthRequest="100"/>
                            <Label Text="\" Grid.Column="4"/>
                            <Editor Text="{Binding MaxHP}" Grid.Column="5" WidthRequest="100"/>
                            <Editor Text="{Binding Conditions}" Grid.Column="6" WidthRequest="200"/>
                            <ImageButton WidthRequest="40" HeightRequest="40" CornerRadius="20"
                                HorizontalOptions="End" VerticalOptions="End" Margin="10"
                                CommandParameter="{Binding .}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:EncounterViewModel}}, Path=ShowInfoCommand}"
                                IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:EncounterViewModel}}, Path=IsNotBusy}" 
                                BackgroundColor="#d0d0df" Grid.Column="7">
                                <ImageButton.Source>
                                    <FontImageSource
                                        FontFamily="FASolid"
                                        Glyph="{StaticResource info}"
                                        Color="Black"
                                        Size="36"/>
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        </ScrollView>
        <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="End">
            <ImageButton WidthRequest="70" HeightRequest="70" CornerRadius="35"
                HorizontalOptions="End" VerticalOptions="End" Margin="10"
                Command="{Binding SortEntitiesCommand}" 
                IsEnabled="{Binding IsNotBusy}" BackgroundColor="#d1001f">
                <ImageButton.Source>
                    <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{StaticResource dtwenty}"
                    Color="Black"
                    Size="36"/>
                </ImageButton.Source>
            </ImageButton>
            <ImageButton WidthRequest="70" HeightRequest="70" CornerRadius="35"
                HorizontalOptions="End" VerticalOptions="End" Margin="10"
                Command="{Binding SortEntitiesCommand}" 
                IsEnabled="{Binding IsNotBusy}" BackgroundColor="#d1001f">
                <ImageButton.Source>
                    <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{StaticResource sort}"
                    Color="Black"
                    Size="36"/>
                </ImageButton.Source>
            </ImageButton>
            <toolkit:Expander Direction="Up">
                <toolkit:Expander.Header>
                    <ImageButton WidthRequest="70" HeightRequest="70" CornerRadius="35"
                    HorizontalOptions="Center" VerticalOptions="End" Margin="10" BackgroundColor="#d1001f">
                        <ImageButton.Source>
                            <FontImageSource
                        FontFamily="FASolid"
                        Glyph="{StaticResource plus}"
                        Color="Black"
                        Size="36"/>
                        </ImageButton.Source>
                    </ImageButton>
                </toolkit:Expander.Header>
                
                <toolkit:Expander.Content>
                    <VerticalStackLayout>
                        <Button Text="New Custom Actor" Command="{Binding NewEnitityCommand}" Margin="5"/>
                        <Button Text="From Bestiary" Command="{Binding GoToSelectEntityCommand}" Margin="5"/>

                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
